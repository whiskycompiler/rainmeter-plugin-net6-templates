{
    "version":  3,
    "configurePresets":  [
                             {
                                 "name":  "windows-base",
                                 "hidden":  true,
                                 "generator":  "Ninja",
                                 "binaryDir":  "${sourceDir}/../../obj/Plugin.Shim/${presetName}",
                                 "installDir":  "${sourceDir}/../../bin/Plugin.Shim/${presetName}",
                                 "cacheVariables":  {
                                                        "CMAKE_C_COMPILER":  "cl.exe",
                                                        "CMAKE_CXX_COMPILER":  "cl.exe",
                                                        "PLUGIN_NAME":  "Plugin.Example.SystemVersion",
                                                        "PLUGIN_VERSION":  "1.0.1",
                                                        "COPYRIGHT":  "@ 2023 - whiskycompiler"
                                                    },
                                 "condition":  {
                                                   "type":  "equals",
                                                   "lhs":  "${hostSystemName}",
                                                   "rhs":  "Windows"
                                               }
                             },
                             {
                                 "name":  "x64-debug",
                                 "displayName":  "x64 Debug",
                                 "inherits":  "windows-base",
                                 "architecture":  {
                                                      "value":  "x64",
                                                      "strategy":  "external"
                                                  },
                                 "cacheVariables":  {
                                                        "CMAKE_BUILD_TYPE":  "Debug",
                                                        "TARGET_ARCHITECTURE":  "x64"
                                                    }
                             },
                             {
                                 "name":  "x64-release",
                                 "displayName":  "x64 Release",
                                 "inherits":  "x64-debug",
                                 "cacheVariables":  {
                                                        "CMAKE_BUILD_TYPE":  "Release"
                                                    }
                             },
                             {
                                 "name":  "x86-debug",
                                 "displayName":  "x86 Debug",
                                 "inherits":  "windows-base",
                                 "architecture":  {
                                                      "value":  "x86",
                                                      "strategy":  "external"
                                                  },
                                 "cacheVariables":  {
                                                        "CMAKE_BUILD_TYPE":  "Debug",
                                                        "TARGET_ARCHITECTURE":  "x86"
                                                    }
                             },
                             {
                                 "name":  "x86-release",
                                 "displayName":  "x86 Release",
                                 "inherits":  "x86-debug",
                                 "cacheVariables":  {
                                                        "CMAKE_BUILD_TYPE":  "Release"
                                                    }
                             }
                         ],
    "buildPresets":  [
                         {
                             "name":  "x64",
                             "configurePreset":  "x64-release"
                         },
                         {
                             "name":  "x86",
                             "configurePreset":  "x86-release"
                         }
                     ]
}
